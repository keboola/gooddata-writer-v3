{
  "name": "keboola/gooddata-writer-v3",
  "license": "MIT",
  "type": "project",
  "description": "GoodData Writer v3 for Keboola Connection",
  "keywords": ["keboola", "gooddata", "writer"],
  "authors": [
    {
      "name": "Jakub Matejka",
      "email": "jakub@keboola.com"
    }
  ],
  "require": {
    "php": "^7.1",
    "guzzlehttp/guzzle": "^6.3",
    "keboola/gooddata-php-client": "^3.0",
    "keboola/php-component": "^4.2",
    "keboola/php-temp": "^1.0",
    "monolog/monolog": "^1.23",
    "symfony/process": "4.1.3",
    "symfony/serializer": "^4.0"
  },
  "require-dev": {
    "jakub-onderka/php-parallel-lint": "^1.0",
    "keboola/coding-standard": "^4.0",
    "keboola/php-temp": "^1.0",
    "phpstan/phpstan-shim": "^0.9.2",
    "phpunit/phpunit": "^7.0",
    "mockery/mockery": "^1.1"
  },
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "Keboola\\GoodDataWriter\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Keboola\\GoodDataWriter\\": "src/",
      "Keboola\\GoodDataWriter\\Test\\": "tests/"
    }
  },
  "scripts": {
    "tests-phpunit": "phpunit",
    "tests": [
      "@tests-phpunit"
    ],

    "phpstan": "phpstan analyse ./src ./tests --level=max --no-progress -c phpstan.neon",
    "phpcs": "phpcs -n --ignore=vendor --extensions=php .",
    "phpcbf": "phpcbf -n --ignore=vendor --extensions=php .",
    "phplint": "parallel-lint -j 10 --exclude vendor .",
    "build": [
      "@phplint",
      "@phpcs",
      "@phpstan",
      "@tests"
    ],
    "ci": [
      "@composer validate --no-check-publish --no-check-all",
      "@build"
    ]
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true
  }
}
